#!/usr/bin/env bash

help="Installs the dootfiles. Usage:

  install"

here=$(dirname "$0")

for file in "$here"/doots/*; do
  f=$(basename "$file")
  cp "$file" "$HOME/.$f"
done

bin="$HOME/bin"
mkdir -p "$bin"
cp "$here"/bin/* "$bin"

make clean
make RELEASE=1 all
mv color expand walk "$HOME/bin"
make clean
