#!/usr/bin/env python3

"""Converts Markdown to HTML. Usage:

  md2html [pathnames...]"""

import markdown
import sys
import script

if len(sys.argv) == 1:
    markdown.markdownFromFile(extensions=[
                "tables", "toc", "fenced_code"])
else:
    for pathname in sys.argv[1:]:
        markdown.markdownFromFile(
            input=pathname, extensions=[
                "tables", "toc", "fenced_code"])
